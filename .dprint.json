{
  "$schema": "https://dprint.dev/schemas/v0.json",
  "extends": "./.dprint.base.json",
  "projectType": "openSource",
  "incremental": true,
  "typescript": {
    "indentWidth": 4
  },
  "includes": ["**/*.ts"],
  "excludes": [
    "**/node_modules",
    "coverage/",
    "dist/",
    "**/flatbuffers/*_generated.ts",
    "**/protocol-buffers/*_pb.d.ts",
    "/packages/ts-type-utils/**/*.d.ts"
  ]
}
