{
  "private": true,
  "homepage": "https://github.com/sounisi5011/npm-packages#readme",
  "bugs": {
    "url": "https://github.com/sounisi5011/npm-packages/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sounisi5011/npm-packages.git"
  },
  "license": "MIT",
  "author": "sounisi5011",
  "scripts": {
    "build": "pnpm recursive run build",
    "fmt": "run-p fmt:*",
    "fmt:config": "prettier --write '**/*.{json,yaml,yml}' '!**/{package.json,pnpm-lock.yaml}'",
    "fmt:pkg": "run-s fmt:pkg:prettier fmt:pkg:sort",
    "fmt:pkg:prettier": "prettier-package-json --write ./package.json",
    "fmt:pkg:sort": "sort-package-json '**/package.json' '!**/node_modules'",
    "fmt:xs": "run-s fmt:xs:eslint",
    "fmt:xs:eslint": "run-s 'lint:eslint -- --fix'",
    "lint": "run-p lint:*",
    "lint:eslint": "eslint --cache ./",
    "prepare": "husky install"
  },
  "devDependencies": {
    "commitizen": "4.2.3",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "7.21.0",
    "eslint-config-standard": "16.0.2",
    "eslint-plugin-dprint": "0.4.0",
    "eslint-plugin-import": "2.22.1",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-promise": "4.3.1",
    "husky": "5.1.3",
    "lint-staged": "10.5.4",
    "npm-run-all": "^4.1.5",
    "prettier": "2.2.1",
    "prettier-package-json": "2.1.3",
    "sort-package-json": "1.49.0"
  }
}
