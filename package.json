{
  "private": true,
  "homepage": "https://github.com/sounisi5011/npm-packages#readme",
  "bugs": {
    "url": "https://github.com/sounisi5011/npm-packages/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sounisi5011/npm-packages.git"
  },
  "license": "MIT",
  "author": "sounisi5011",
  "scripts": {
    "build-all": "npm-run-all --parallel 'build:!(submodule)' --sequential build:submodule",
    "build-flatbuffers": "pnpm recursive run build-flatbuffers --filter '*'",
    "build-only-packages": "ultra --recursive --filter 'packages/**' build",
    "build-protobuf": "pnpm recursive run build-protobuf --filter '*'",
    "build:dprint-config": "globby-exec node ./scripts/sync-eslintignore-to-dprint-excludes.js ./.eslintignore '{{./{dprint,.dprint}{,-*}.json}}' && globby-exec prettier --write '{{./{dprint,.dprint}{,-*}.json}}'",
    "build:package-list": "node ./scripts/update-package-list.js ./README.md",
    "build:submodule": "ultra --recursive build",
    "fmt": "run-p 'fmt:!(ts|js)'",
    "fmt-check": "run-p fmt-check:*",
    "fmt-check:pkg": "globby-exec node ./scripts/format-package-json.js --check '{{**/package.json}}'",
    "fmt-check:prettier": "prettier --check .",
    "fmt:config": "prettier --write .",
    "fmt:js": "run-s fmt:js:dprint fmt:js:eslint",
    "fmt:js:dprint": "dprint fmt -c ./.dprint-js.json",
    "fmt:js:eslint": "eslint --cache --fix --ext .js ./",
    "fmt:pkg": "globby-exec node ./scripts/format-package-json.js --write '{{**/package.json}}'",
    "fmt:readme": "run-s fmt:readme:*",
    "fmt:readme:update-badge": "globby-exec node ./scripts/update-readme-badge.js '{{*/**/README.md}}'",
    "fmt:ts": "run-s fmt:ts:dprint fmt:ts:eslint",
    "fmt:ts:dprint": "dprint fmt -c ./.dprint.json",
    "fmt:ts:eslint": "eslint --cache --fix --ext .ts ./",
    "fmt:xs": "npm-run-all --parallel fmt:{ts,js}:dprint fmt:xs:eslint",
    "fmt:xs:eslint": "run-s 'lint:eslint -- --fix'",
    "preinstall": "npx only-allow pnpm",
    "lint": "run-p lint:*",
    "lint:eslint": "eslint --cache ./",
    "lint:tsc": "pnpm recursive run lint:tsc --filter '*'",
    "prepare": "husky install",
    "test": "run-s lint test-only fmt-check",
    "test-only": "run-s test:unit-test",
    "test:unit-test": "pnpm recursive test --filter '*'"
  },
  "devDependencies": {
    "@sounisi5011/scripts--fix-flatbuffers-generated-ts": "workspace:^0.0.0",
    "@sounisi5011/scripts--globby-exec": "workspace:^0.0.0",
    "@types/jest": "26.0.23",
    "@typescript-eslint/eslint-plugin": "4.26.0",
    "commitizen": "4.2.4",
    "cz-conventional-changelog": "3.3.0",
    "dprint": "0.14.1",
    "eslint": "7.28.0",
    "eslint-config-prettier": "8.3.0",
    "eslint-config-standard": "16.0.3",
    "eslint-config-standard-with-typescript": "20.0.0",
    "eslint-plugin-import": "2.23.4",
    "eslint-plugin-jest": "24.3.6",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-promise": "5.1.0",
    "husky": "6.0.0",
    "jest": "27.0.4",
    "lint-staged": "11.0.0",
    "npm-run-all": "4.1.5",
    "prettier": "2.3.0",
    "prettier-package-json": "2.6.0",
    "sort-package-json": "1.50.0",
    "ts-jest": "27.0.2",
    "typescript": "4.3.2",
    "ultra-runner": "3.10.5"
  },
  "engines": {
    "node": "^12.17.x || 14.x || 15.x || 16.x",
    "pnpm": "6.x"
  }
}
